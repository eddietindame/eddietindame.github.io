    .wrapper
        .icon-row
            .icon-row__box: a(href="https://www.facebook.com/eddie.tindame")
                figure
                    svg(id="facebook" class="icon-row__box__graphic")
                        use(xlink:href="res/icons.svg#facebook")
                        title Facebook Logo
                    figcaption Facebook
            .icon-row__box: a(href="https://github.com/eddietindame")
                figure
                    svg(id="github" class="icon-row__box__graphic")
                        title Github Logo
                        use(xlink:href="res/icons.svg#github")
                    figcaption GitHub
            .icon-row__box: a(href="https://www.twitter.com/realquaid69")
                figure
                    svg(id="twitter" class="icon-row__box__graphic")
                        title Twitter Logo
                        use(xlink:href="res/icons.svg#twitter")
                    figcaption Twitter
            .icon-row__box: a(href="https://www.behance.net/eddietindame")
                figure
                    svg(id="behance" class="icon-row__box__graphic")
                        title Behance Logo
                        use(xlink:href="res/icons.svg#behance")
                    figcaption Behance
