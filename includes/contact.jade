                        use(xlink:href="res/icons.svg#linkedin")
                    figcaption LinkedIn
        .contact__me
            a(href="res/eddie-tindame-cv.pdf")
                img(class='portrait' src='res/portrait.jpg' alt='Portrait of Eddie Tindame')
            a(class="popup popup--wide hide" href="res/eddie-tindame-cv.pdf")
                svg(class="popup__graphic" preserveAspectRatio="xMidYMid meet")
                    title Call to Action
                    desc Click here for my cv!
                    use(xlink:href="res/cta.svg#side")
            a(class="popup popup--mobile hide" href="res/eddie-tindame-cv.pdf")
                svg(class="popup__graphic" preserveAspectRatio="xMidYMid meet")
                    title Call to Action 
                    desc Click here for my cv!
                    use(xlink:href="res/cta.svg#up")
            a(href="mailto:eddie.tindame@googlemail.com")
                h1.email eddie.tindame@googlemail.com
